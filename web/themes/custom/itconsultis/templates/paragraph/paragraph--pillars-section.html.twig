{#
/**
 * @file
 * Theme override for Pillars Section paragraph.
 */
#}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'pillars-section',
  ]
%}

<section{{ attributes.addClass(classes) }} aria-labelledby="pillars-title">
  <div class="container">
    <div class="section-header">
      {% if content.field_title %}
        <h2 id="pillars-title" class="section-title">{{ content.field_title }}</h2>
      {% endif %}
      {% if content.field_description %}
        <div class="section-description">{{ content.field_description }}</div>
      {% endif %}
    </div>
    
    <div class="pillars-grid" role="list">
      {{ content.field_pillars }}
    </div>
  </div>
</section>